<%- include('common/header.ejs') %>
  <div id="Main_div">
    <!-- 메인 컨테이너 -->
    <div id="container">
      <header>
        <img src="../file/logo.png" alt="">
        <div id="guide">?</div>
      </header>
      <!-- 로그인 폼 -->
      <div id="login-form">
        <h2>로그인</h2>
        <form action="" method="post"> <!-- 로그인 폼의 action과 method 설정 -->
          <div class="input-group">
            <label for="username">아이디</label>
            <input type="text" id="username" name="username" required>
          </div>
          <div class="input-group">
            <label for="password">비밀번호</label>
            <input type="password" id="password" name="password" required>
          </div>
          <button>회원가입</button>
          <button type="submit">로그인</button>
        </form>
        <!-- 소셜 로그인 버튼 -->
        <div id="social-login">
          <button class="social-button" id="naver-login">
            <img src="../file/icon/btnG_아이콘사각.png" alt=""> 
            <div>네이버 로그인</div>
          </button>
          <button class="social-button" id="kakao-login">
            <img src="../file/icon/kakao.png" alt="">
            <div>카카오 로그인</div>
          </button>
        </div>
      </div>
    </div>
  </div>
</body>
</html>